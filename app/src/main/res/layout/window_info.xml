<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:id="@+id/infoWindow_root_layout">
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_main"
        android:background="@drawable/rounded_corners"
        android:textSize="14sp"
        android:id="@+id/name_textView"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:rowCount="5"
        android:columnCount="4"
        android:id="@+id/infowindow_grid_layout"
        android:background="@drawable/rounded_corner_thin"
        >



        <TextView
            android:id="@+id/coordinatesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_marginBottom="10dp"
            android:layout_gravity="fill_horizontal"
            android:textAlignment="center"
            android:layout_column="0"
            android:layout_columnSpan="3"
            />


        <CheckBox
            android:id="@+id/checkbox1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"
            android:textSize="12sp"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/checkBox1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"
            android:textSize="12sp"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/checkBox1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"
            android:textSize="12sp"
            android:visibility="invisible"
            />


        <CheckBox
            android:id="@+id/checkBox2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"
            android:textSize="12sp"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/checkBox2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"
            android:textSize="12sp"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/checkBox2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:checked="false"
            android:clickable="false"

            android:textSize="12sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:background="@drawable/rounded_corner_blue_light"

            android:layout_columnSpan="3"
            android:layout_column="0"
            />


    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>